<script>
  module.exports = {
    created: function () {
      // 自动生成
      this.query('.conn').innerHTML = this.query('.tab-bar-item .news-list').innerHTML
      this.query('.tab-bar-item').classList.add('active')
    },
    changeTab: function () {
      this.queryAll('.tab-bar-item').forEach(element => {
        element.classList.remove('active')
      });
      this.query('.conn').innerHTML = this.$target.querySelector('.news-list').innerHTML
      this.$target.classList.add('active')
    }
  }
</script>

